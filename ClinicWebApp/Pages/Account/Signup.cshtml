@page
@model ClinicWebApp.Pages.Account.SignupModel
@{
}

<div class="form-wrap">
    <form asp-page="Signup" asp-route-ReturnUrl="@Model.ReturnUrl" method="post" class="form">
        <div asp-validation-summary="All" class="validation-error"></div>

        <label asp-for="Username" class="label"></label>
        <input type="text" asp-for="Username" class="input" />
        <span asp-validation-for="Username" class="span"></span>

        <label asp-for="Name" class="label"></label>
        <input type="text" asp-for="Name" class="input" />
        <span asp-validation-for="Name" class="span"></span>

        <label asp-for="PhoneNumber" class="label"></label>
        <input type="text" asp-for="PhoneNumber" class="input" placeholder="به طور مثال: 9916549821" />
        <span asp-validation-for="PhoneNumber" class="span"></span>

        <label asp-for="Password" class="label"></label>
        <input type="password" asp-for="Password" class="input" />
        <span asp-validation-for="Password" class="span"></span>

        <label asp-for="ConfirmPassword" class="label"></label>
        <input type="password" asp-for="ConfirmPassword" class="input" />
        <span asp-validation-for="ConfirmPassword" class="span"></span>

        <input type="submit" value="ثبت نام" class="button" />
        <div class="signup-link">
            <p>آیا قبلا ثبت نام کرده؟ <a asp-page="Signin">ورود</a></p>
        </div>
    </form>
</div>